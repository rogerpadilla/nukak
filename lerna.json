{
  "$schema": "https://json.schemastore.org/lerna.json",
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "createChangelog": true,
      "allowBranch": "main",
      "ignoreChanges": ["**/*.spec.ts", "**/*.test.ts", "**/test/**"],
      "forcePublish": true,
      "push": false,
      "gitRemote": "origin"
    }
  },
  "npmClient": "bun",
  "packages": ["packages/*"]
}
