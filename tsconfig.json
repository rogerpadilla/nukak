{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "target": "ESNext",
    "strict": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "baseUrl": ".",
    "importHelpers": true,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "paths": {
      "uql": ["packages/uql/src/index.ts"],
      "uql/dialect": ["packages/uql/src/dialect/index.ts"],
      "uql/entity": ["packages/uql/src/entity/index.ts"],
      "uql/querier": ["packages/uql/src/querier/index.ts"],
      "uql/repository": ["packages/uql/src/repository/index.ts"],
      "uql/test": ["packages/uql/src/test/index.ts"],
      "uql/type": ["packages/uql/src/type/index.ts"],
      "uql/util": ["packages/uql/src/util/index.ts"],
      "uql/mysql": ["packages/uql/src/mysql/index.ts"],
      "uql/postgres": ["packages/uql/src/postgres/index.ts"],
      "uql/maria": ["packages/uql/src/maria/index.ts"],
      "uql/sqlite": ["packages/uql/src/sqlite/index.ts"],
      "uql/mongo": ["packages/uql/src/mongo/index.ts"],
      "uql/express": ["packages/uql/src/express/index.ts"],
      "uql/browser": ["packages/uql/src/browser/index.ts"],
      "uql/*": ["packages/uql/src/*"]
    },
    "ignoreDeprecations": "5.0"
  },
  "exclude": ["node_modules", "data", "dist", "coverage", "**/*/node_modules", "**/*/dist"]
}
