{
  "private": true,
  "version": "1.4.14",
  "type": "module",
  "sideEffects": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "npm run build && lerna publish patch && git pull && git push",
    "check.ts": "tsc --noEmit",
    "build": "lerna run build",
    "lint": "biome check .",
    "lint.fix": "biome check . --fix",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --watchAll",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --coverage",
    "test.all": "jest --clearCache && NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --testMatch '**/*.{it,spec}.ts'",
    "test.all.watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --watchAll --testMatch '**/*.{it,spec}.ts'",
    "test.focus": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --watchAll --testMatch '**/mongodbQuerier.{it,spec}.ts' --t 'shouldInsertOneAndCascadeOneToOne'",
    "container": "docker compose up",
    "container:down": "docker compose down"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@types/jest": "30.0.0",
    "concurrently": "9.2.1",
    "coveralls": "3.1.1",
    "cross-env": "10.1.0",
    "jest": "30.2.0",
    "jest-util": "^30.2.0",
    "mongodb-memory-server": "11.0.1",
    "rimraf": "6.1.2",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "typescript": "5.4.5"
  },
  "author": "Roger Padilla"
}
