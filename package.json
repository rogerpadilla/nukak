{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "yarn build && lerna publish patch && git pull && git push",
    "build": "lerna run build",
    "lint": "eslint .",
    "lint.fix": "yarn lint --fix",
    "test": "jest --clearCache && concurrently 'yarn:lint' 'jest'",
    "test.all": "jest --clearCache && jest --testMatch '**/*.{it,spec}.ts'",
    "test.watch": "jest --watchAll",
    "test.watch.all": "jest --watchAll --testMatch '**/*.{it,spec}.ts'",
    "mongo-rs": "run-rs -v 4.4.13 --portStart 27027",
    "container": "concurrently 'npm:mongo-rs' 'docker-compose up'"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/jest": "^28.1.4",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "concurrently": "^7.2.2",
    "coveralls": "^3.1.1",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "3.1.5",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "run-rs": "^0.7.6",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 150
  },
  "author": "Roger Padilla"
}
