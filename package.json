{
  "private": true,
  "version": "3.3.0",
  "type": "module",
  "sideEffects": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release.patch": "bun run build && lerna publish patch && git pull && git push",
    "release.minor": "bun run build && lerna publish minor && git pull && git push",
    "release.major": "bun run build && lerna publish major && git pull && git push",
    "check": "concurrently 'bun run check.ts' 'bun run lint.fix'",
    "check.ts": "tsc --noEmit",
    "build": "lerna run build",
    "lint": "biome check .",
    "lint.fix": "biome check . --fix",
    "test": "bun test && node scripts/coverage-report.js",
    "test.watch": "bun test --watch",
    "test.focus": "bun test -t 'shouldInsertOneAndCascadeOneToOne' mongodbQuerier"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@commitlint/cli": "20.3.0",
    "@commitlint/config-conventional": "20.3.0",
    "@types/bun": "^1.3.5",
    "concurrently": "9.2.1",
    "lerna": "^9.0.3",
    "mongodb-memory-server": "11.0.1",
    "rimraf": "6.1.2",
    "typescript": "~5.4.5"
  },
  "author": "Roger Padilla"
}
