{
  "private": true,
  "version": "3.8.3",
  "type": "module",
  "sideEffects": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release.patch": "bun run build && lerna publish patch && git pull && git push",
    "release.minor": "bun run build && lerna publish minor && git pull && git push",
    "release.major": "bun run build && lerna publish major && git pull && git push",
    "check": "concurrently 'bun run ts' 'bun run lint.fix'",
    "ts": "tsc --noEmit",
    "build": "lerna run build",
    "lint": "biome check .",
    "lint.fix": "biome check . --fix",
    "test": "vitest run --coverage",
    "test.watch": "vitest",
    "test.focus": "vitest run -t 'shouldInsertOneAndCascadeOneToOne' packages/core/src/mongo/mongodbQuerier.test.ts"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@swc/core": "^1.15.8",
    "@types/bun": "^1.3.5",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "9.2.1",
    "copyfiles": "^2.4.1",
    "lerna": "^9.0.3",
    "mongodb-memory-server": "11.0.1",
    "rimraf": "6.1.2",
    "supertest": "^7.2.2",
    "typescript": "~5.4.5",
    "unplugin-swc": "^1.5.9",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "author": "Roger Padilla"
}
