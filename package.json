{
  "private": true,
  "version": "1.8.0",
  "type": "module",
  "sideEffects": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release.patch": "bun run build && lerna publish patch && git pull && git push",
    "release.minor": "bun run build && lerna publish minor && git pull && git push",
    "release.major": "bun run build && lerna publish major && git pull && git push",
    "check": "concurrently 'bun run check.ts' 'bun run lint.fix'",
    "check.ts": "tsc --noEmit",
    "build": "lerna run build",
    "lint": "biome check .",
    "lint.fix": "biome check . --fix",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test.all": "jest --clearCache && jest --testMatch '**/*.{it,spec}.ts'",
    "test.all.watch": "jest --watchAll --testMatch '**/*.{it,spec}.ts'",
    "test.focus": "jest --watchAll --testMatch '**/mongodbQuerier.{it,spec}.ts' --t 'shouldInsertOneAndCascadeOneToOne'",
    "test.fast": "bun test"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@jest/globals": "^30.2.0",
    "@jest/test-sequencer": "^30.2.0",
    "@swc/jest": "0.2.39",
    "@types/jest": "30.0.0",
    "concurrently": "9.2.1",
    "coveralls": "3.1.1",
    "jest": "30.2.0",
    "lerna": "^9.0.3",
    "mongodb-memory-server": "11.0.1",
    "rimraf": "6.1.2",
    "typescript": "~5.4.5"
  },
  "author": "Roger Padilla"
}
