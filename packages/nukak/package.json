  "dependencies": {
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.6.3"
  },
  "devDependencies": {
    "@types/node": "^22.2.0",
    "@types/sqlstring": "^2.3.2",
    "copyfiles": "^2.4.1",
