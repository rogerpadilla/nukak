    "url": "https://github.com/rogerpadilla/nukak/issues"
  },
  "keywords": [
    "orm",
    "data-mapper",
    "persistence",
    "typescript-orm",
    "javascript-orm",
    "mariadb",
    "mariadb-orm",
    "mysql",
    "mysql-orm",
    "postgresql",
    "postgresql-orm",
    "sqlite",
